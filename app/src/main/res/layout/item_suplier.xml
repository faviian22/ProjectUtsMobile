<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_table_row"
        android:padding="8dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Supplier"
            android:textSize="14sp"
            android:textColor="@color/labelTextColor"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No. Telepon"
            android:textSize="14sp"
            android:textColor="@color/labelTextColor"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alamat"
            android:textSize="14sp"
            android:textColor="@color/labelTextColor"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nama Produk"
            android:textSize="14sp"
            android:textColor="@color/labelTextColor"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"
        android:layout_marginVertical="8dp" />

    <!-- Data Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_table_row"
        android:padding="8dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/textViewNamaSuplier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/valueTextColor"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewNoTlpn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/valueTextColor"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewAlamatSuplier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/valueTextColor"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewNamaProduk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/valueTextColor"
            android:gravity="center"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Action Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/editButtonColor"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:contentDescription="Edit Button" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/deleteButtonColor"
            android:text="Hapus"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="12dp"
            android:contentDescription="Delete Button" />
    </LinearLayout>

</LinearLayout>